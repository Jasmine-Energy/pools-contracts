{
  "name": "@jasmine-energy/pools-contracts",
  "version": "1.0.0",
  "description": "Jasmine EVM smart contracts for liquidity pools",
  "homepage": "https://jasmine.energy",
  "license": "BUSL-1.1",
  "private": true,
  "author": "Kai Aldag <kai.aldag@jasmine.energy>",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "prestart": "yarn build:sol:nodocs",
    "start": "npx hardhat node --network hardhat --nocompile --silent",
    "build": "yarn build:sol --force && yarn build:ts",
    "build:ts": "tsc -p tsconfig.build.json",
    "build:sol": "npx hardhat compile",
    "build:sol:nodocs": "npx hardhat compile --no-dodoc",
    "test": "npx hardhat test --network hardhat",
    "test:trace": "npx hardhat test --network hardhat --trace-error --gascost",
    "test:coverage": "npx hardhat coverage --network hardhat",
    "fuzz:factory": "ECHIDNA_RPC_URL=$ECHIDNA_RPC_URL echidna contracts/test/JasminePoolFactoryTest.sol --contract ExternalJasminePoolFactoryTest --config echidna.config.yaml",
    "fuzz:pool": "ECHIDNA_RPC_URL=$ECHIDNA_RPC_URL echidna contracts/test/JasminePoolTest.sol --contract CryticERC20ExternalHarness --config echidna.config.yaml",
    "env:compile": "op inject -i .env.template -o .env",
    "clean": "npx hardhat clean",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "interact": "npx hardhat interact",
    "pool:list": "npx hardhat pool:list",
    "deployments:list": "npx hardhat deployments",
    "contracts:layout": "npx hardhat check",
    "contracts:size": "npx hardhat size-contracts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jasmine-Energy/v1-pools-contracts.git"
  },
  "keywords": [
    "solidity",
    "evm",
    "smart-contracts",
    "jasmine"
  ],
  "bugs": {
    "url": "https://github.com/Jasmine-Energy/v1-pools-contracts/issues"
  },
  "dependencies": {
    "@crytic/properties": "https://github.com/crytic/properties.git",
    "@jasmine-energy/core-contracts": "^1.0.0",
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.3",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@uniswap/v3-core": "^1.0.0",
    "@uniswap/v3-periphery": "^1.0.1",
    "eslint": "^8.36.0"
  },
  "devDependencies": {
    "@colors/colors": "^1.5.0",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.0.4",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@openzeppelin/hardhat-upgrades": "^1.27.0",
    "@primitivefi/hardhat-dodoc": "^0.2.3",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.3",
    "@uniswap/permit2-sdk": "^1.2.0",
    "axios": "^1.3.5",
    "chai": "^4.3.7",
    "cli-table3": "^0.6.3",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "hardhat": "^2.17.0",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-contract-sizer": "^2.8.0",
    "hardhat-dependency-compiler": "^1.1.3",
    "hardhat-deploy": "^0.11.34",
    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-interact": "^0.2.3",
    "hardhat-storage-layout": "^0.1.7",
    "hardhat-tracer": "^2.1.2",
    "mocha": "^10.2.0",
    "mocha-explorer-launcher-scripts": "^0.4.0",
    "prettier": "^2.8.7",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typechain": "^8.3.2",
    "typescript": "^4.9.5"
  }
}

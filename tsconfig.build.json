{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDirs": [
      "src",
      "typechain",
      "abi/**/*.json",
      "artifacts/**/*.json"
    ],
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "src",
    "typechain",
    "abi/**/*.json",
    "artifacts/**/*.json"
  ]
}
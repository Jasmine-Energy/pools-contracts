{
    "solidity.packageDefaultDependenciesDirectory": "./node_modules",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "eslint.validate": ["javascript", "typescript"],
    "eslint.format.enable": true,
    "solidity-va.debug.parser.showExceptions": true,
    "solidity-va.whatsNew.disabled": true,
    "solidity-va.uml.actors.enable": true,
    "solidity-va.diagnostics.cdili_json.import": true,
    "solidity-va.preview.markdown": true,
    "slither.solcPath": "",
    "slither.hiddenDetectors": [],
    "mochaExplorer.env": {
        "HARDHAT_NETWORK": "hardhat"
    }
}

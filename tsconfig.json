{
    "compilerOptions": {
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "paths": {
            "@/*": [
                "./*"
            ]
        },
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "es2021"
    },
    "include": ["./scripts", "./deploy", "./test", "./tasks", "./utils", "./types", "./hardhat", "./typechain"],
    "files": ["./hardhat.config.ts"]
}